@model IEnumerable<Capstone_project.Models.SignUp>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;

    var patientCount = Model.Count(u => u.Role == "Patient");
    var doctorCount = Model.Count(u => u.Role == "Doctor");
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/admin.css" rel="stylesheet" />


<div class="container-fluid full-page">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-lg rounded-3 animate-fadeIn py-3 mb-4 mx-3">
        <div class="container-fluid px-0">
            <a class="navbar-brand fw-bold text-primary" href="#">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @((ViewData["Title"]?.ToString() == "Admin Dashboard" ? "active fw-bold text-primary" : ""))"
                           asp-controller="Admin" asp-action="Users">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @((ViewData["Title"]?.ToString() == "Bookings" ? "active fw-bold text-primary" : ""))"
                           asp-controller="Admin" asp-action="Bookings">Bookings</a>
                    </li>
                </ul>
                <form asp-controller="Account" asp-action="Login" method="post" class="d-flex">
                    <button type="submit" class="btn fancy-btn btn-sm shadow-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>
    <!-- Main content -->
    <div class="table-container animate-fadeIn">

        <h2 class="text-center fw-bold mb-4">Admin Dashboard</h2>

        <form method="get" class="mb-3 d-flex align-items-center justify-content-center">
            <label class="me-2 fw-bold">Filter by Role:</label>
            <select name="roleFilter" asp-items="ViewBag.RoleList" class="form-select w-25" onchange="this.form.submit()"></select>
        </form>

        <div class="table-responsive shadow-lg rounded-3 mb-4">
            <table class="table table-hover table-bordered align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#userModal-@user.Id">Details</button>
                                <form asp-action="DeleteUser" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this user?')">Delete</button>
                                </form>

                                <!-- Modal -->
                                <div class="modal fade" id="userModal-@user.Id" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">User Details</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p><strong>Full Name:</strong> @user.FirstName @user.LastName</p>
                                                <p><strong>Email:</strong> @user.Email</p>
                                                <p><strong>Role:</strong> @user.Role</p>
                                                <p><strong>Password:</strong> *******</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Bottom info cards -->
        <div class="row g-4">
            <div class="col-md-6">
                <div class="info-card bg-patient">
                    <h5>Patients</h5>
                    <h2>@patientCount</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-card bg-doctor">
                    <h5>Doctors</h5>
                    <h2>@doctorCount</h2>
                </div>
            </div>
        </div>

    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
