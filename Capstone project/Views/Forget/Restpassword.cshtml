@model IEnumerable<Capstone_project.Models.SignUp>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reset Password</title>
    <link rel="stylesheet" href="~/css/Restpassword.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <div class="container">
        <a href="@Url.Action("Login", "Account")" class="back-btn">
            <i class="fas fa-arrow-left"></i>
        </a>

        <div class="logo-section">
            <img src="~/Images/Logo white.png" alt="Logo" class="logo">
        </div>

        <div class="form-box">
            <h2 class="form-title">Reset Password</h2>

            <form asp-controller="Account" asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger" style="margin-bottom: 15px;"></div>

                <div class="input-group">
                    <label for="email">Email</label>
                    <div class="input-wrapper">
                        <input type="email" id="email" name="email" placeholder="Enter your registered email" required />
                    </div>
                </div>

                <div class="input-group">
                    <label for="newPassword">New Password</label>
                    <div class="input-wrapper">
                        <input type="password" id="new-password" name="newPassword" placeholder="********" required minlength="8" />
                        <i class="fas fa-eye-slash toggle-visibility" onclick="toggleVisibility(this, 'new-password')"></i>
                    </div>
                </div>

                <div class="input-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <div class="input-wrapper">
                        <input type="password" id="confirm-password" name="confirmPassword" placeholder="********" required minlength="8" />
                        <i class="fas fa-eye-slash toggle-visibility" onclick="toggleVisibility(this, 'confirm-password')"></i>
                    </div>
                </div>

                <button type="submit" class="submit-btn">Reset</button>
            </form>
        </div>
    </div>

    <script>
        function toggleVisibility(icon, inputId) {
            const input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            }
        }
    </script>
</body>
</html>
