@model Capstone_project.Models.Login

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link rel="stylesheet" href="~/css/site.css" />
<style>
    /* Role dropdown */
    .form-group select {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        width: 100%;
        background-color: #fff;
        appearance: none;
    }

    /* Adjust spacing for form groups */
    .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

    /* Professional Sign Up link */
    .signup-link {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }

        .signup-link a {
            color: #4f99d8;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s;
        }

            .signup-link a:hover {
                color: #407fc0;
                text-decoration: underline;
            }
</style>

<div class="container">
    <div class="left">
        <div class="logo">
            <img src="~/Images/Logo white.png" alt="logo" />
        </div>

        <form asp-controller="Account" asp-action="Login" method="post" class="login-form">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="********" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Role selection -->
            <div class="form-group">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-control">
                    <option value="" disabled selected>Select Role</option>
                    <option value="Doctor">Doctor</option>
                    <option value="Patient">Patient</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="remember">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <a href="@Url.Action("Forgetpassword","Forget")" class="forgot">Forgot password?</a>
            </div>

            <div class="btns">
                <button type="submit" class="btn-login">Login</button>
            </div>
        </form>

        <div class="or">Or</div>

        <!-- Google External-Login Form (Hidden) -->
        <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="display:none;">
            @Html.AntiForgeryToken()
            <input type="hidden" name="provider" value="Google" />
            <button type="submit" class="google-btn">
                <img src="~/images/Google.png" alt="Google logo" />
                <span>Sign in with Google</span>
            </button>
        </form>

        <!-- Professional Sign Up link -->
        <div class="signup-link">
            Don't have an account?
            <a asp-controller="Account" asp-action="SignUp">Sign Up</a>
        </div>

        <div class="copyright">
            © 2025 Pro Clinic corporation
        </div>
    </div>

    <div class="right">
        <h2>Interact with the clinic digitally<br />and get better benefits than with an app</h2>
        <h3>Pro Clinic!</h3>
        <img src="~/images/Pro Clinic.png" alt="clinic illustration" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
