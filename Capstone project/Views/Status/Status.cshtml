@model Capstone_project.Models.statusmodel
@{
    ViewData["Title"] = "Reservation Status";
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Client Dashboard - Pro Clinic</title>
    <link rel="stylesheet" href="~/css/Status.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>

    <div class="top-header">
        <a href="javascript:history.back()" class="back-btn"><i class="fas fa-arrow-left"></i></a>
    </div>

    <form asp-action="Status" asp-controller="Status" method="post">
        @Html.AntiForgeryToken()

        <div class="form-section animate-fadeIn">
            <h2>Personal Information</h2>
            <div class="form-group">
                <input asp-for="FirstName" placeholder="First Name" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" placeholder="Last Name" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Age" placeholder="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="gender-buttons">
                    <button type="button" class="gender-option" onclick="setGender('Female', this)">Female</button>
                    <button type="button" class="gender-option" onclick="setGender('Male', this)">Male</button>
                    <button type="button" class="gender-option" onclick="setGender('Don\'t want to say', this)">Don't want to say</button>
                </div>
                <input type="hidden" asp-for="Gender" id="GenderInput" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group"><input asp-for="Height" placeholder="Height" class="form-control" /></div>
            <div class="form-group"><input asp-for="Weight" placeholder="Weight" class="form-control" /></div>

            <h2>Main Complaint</h2>
            <div class="form-group"><input asp-for="Symptoms" placeholder="Symptoms" class="form-control" /></div>
            <div class="form-group"><input asp-for="SymptomsStartDate" placeholder="Start Date" class="form-control" /></div>
            <div class="form-group"><input asp-for="SymptomsPattern" placeholder="Pattern" class="form-control" /></div>

            <h2>Severity</h2>
            <div class="form-group"><input asp-for="SeverityLevel" placeholder="Severity (1-10)" class="form-control" /></div>
            <div class="form-group"><input asp-for="SeverityCondition" placeholder="Worsen condition" class="form-control" /></div>

            <h2>Medical History</h2>
            <div class="form-group"><input asp-for="ChronicDiseases" placeholder="Chronic Diseases" class="form-control" /></div>
            <div class="form-group"><input asp-for="TriggerActivities" placeholder="Trigger Activities" class="form-control" /></div>
            <div class="form-group"><input asp-for="PreviousMedications" placeholder="Previous Medications" class="form-control" /></div>

            <h2>Family History</h2>
            <div class="form-group"><input asp-for="FamilyIssues" placeholder="Family Issues" class="form-control" /></div>

            <h2>Current Medications</h2>
            <div class="form-group"><input asp-for="CurrentMedications" placeholder="Current Medications" class="form-control" /></div>

            <h2>Allergies</h2>
            <div class="form-group"><input asp-for="Allergies" placeholder="Allergies" class="form-control" /></div>

            <h2>Lifestyle</h2>
            <div class="form-group"><input asp-for="SmokingOrDrinking" placeholder="Smoke/Drink?" class="form-control" /></div>
            <div class="form-group"><input asp-for="SleepPattern" placeholder="Sleep Pattern" class="form-control" /></div>
            <div class="form-group"><input asp-for="ActivityLevel" placeholder="Activity Level" class="form-control" /></div>

            <button class="submit fancy-btn animate-pulse" type="submit">🚀 Send</button>
        </div>
    </form>

    <partial name="_ValidationScriptsPartial" />
    <script>
        function setGender(value, button) {
            document.getElementById('GenderInput').value = value;
            const buttons = document.querySelectorAll('.gender-option');
            buttons.forEach(btn => btn.classList.remove('selected'));
            button.classList.add('selected');
        }
    </script>
</body>
</html>
