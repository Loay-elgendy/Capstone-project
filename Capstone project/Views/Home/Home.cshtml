@model IEnumerable<Capstone_project.Models.AddClinic>
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Client Dashboard - Pro Clinic</title>

    <!-- Site‑wide stylesheet -->
    <link rel="stylesheet" href="~/css/Home.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        .doctor-link {
            display: inline-block;
            padding: 10px 20px;
            background: #fff;
            color: #007bff;
            border: 2px solid #007bff;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            transition: .3s all ease;
            cursor: pointer;
        }

            .doctor-link:hover {
                background: #007bff;
                color: #fff;
            }

            .doctor-link:active {
                background: #0056b3;
                border-color: #0056b3;
                color: #fff;
            }

            .doctor-link:focus {
                outline: none;
                box-shadow: 0 0 0 2px rgba(0,123,255,.4);
            }

        /* Logout link style */
        .logout-link {
            color: #fff;
            font-weight: 600;
            cursor: pointer;
            margin-left: 20px;
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <header>
        <div class="header-left">
            <div class="logo">
                <img src="~/Images/Logoafteredit.png" alt="Pro Clinic Logo" />
                <span>Pro Clinic</span>
            </div>
            <nav>
                <a href="#doctors">Doctors</a>
                <a href="#prescription">Reservation</a>
                <a href="#info">Information</a>
                <span class="logout-link" id="logoutLink">Logout</span>
            </nav>
        </div>
        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Search for..." />
        </div>
    </header>

    <script>
        document.getElementById('logoutLink').addEventListener('click', function(e) {
            e.preventDefault();
            if (confirm("Are you sure you want to log out?")) {
                window.location.href = '@Url.Action("Logout", "Account")';
            }
        });
    </script>

    <!-- Doctors Section -->
    <div id="doctors" class="section-title">Doctors</div>
    <div class="doctor-container">
        @if (Model != null)
        {
            foreach (var clinic in Model)
            {
                <div class="doctor">
                    <h3>@clinic.DoctorName</h3>
                    <p>Specialty: @clinic.Specialty</p>
                    <a class="doctor-link" href="@Url.Action("Select","Select", new { id = clinic.Id })">Book</a>
                </div>
            }
        }
    </div>

    <!-- Reservation Table -->
    <div id="prescription" class="section-title">Reservation</div>
    <div class="card large" style="width: 90%; margin: auto;">
        <table style="width: 100%; border-collapse: collapse; text-align: center;">
            <thead style="background-color: #e7f4ff;">
                <tr>
                    <th style="padding: 10px; border: 1px solid #ccc;">Name</th>
                    <th style="padding: 10px; border: 1px solid #ccc;">Price</th>
                    <th style="padding: 10px; border: 1px solid #ccc;">Reservation</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td style="padding: 10px; border: 1px solid #ccc;">@item.DoctorName</td>
                            <td style="padding: 10px; border: 1px solid #ccc;">@item.ConsultationFee</td>
                            <td style="padding: 10px; border: 1px solid #ccc;">
                                <a class="doctor-link" href="@Url.Action("Prescription","Prescription", new { id = item.Id })">Check Reservation</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Information Section -->
    <section class="info" id="info">
        <h2 class="section-title">Information</h2>
        <div class="info-cards">
            <div class="info-card">
                <div class="icon"><i class="fas fa-lightbulb"></i></div>
                <strong>About the project</strong>
                <p>
                    A smart system to reduce workload in clinics and<br />
                    improve the accuracy of diagnoses and prescriptions<br />
                    using modern digital technologies.
                </p>
            </div>

            <div class="info-card">
                <div class="icon"><i class="fas fa-check"></i></div>
                <strong>Challenges</strong>
                <p>
                    Crowded clinics and long waiting times.<br />
                    Time wasted collecting information manually.<br />
                    Prescription errors due to handwriting.
                </p>
            </div>

            <div class="info-card">
                <div class="icon"><i class="fas fa-ambulance"></i></div>
                <strong>Impact of the solution</strong>
                <p>
                    On doctors: More time for diagnosis, fewer errors, higher productivity.<br />
                    On patients: Reduced waiting times, easier experience, more accurate treatment.<br />
                    On the market: Drives the digitization of medical services and increases user loyalty.
                </p>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="socials">
            <i class="fab fa-facebook-f"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-linkedin-in"></i>
        </div>
        <p>Pro clinic © 2025. All rights reserved.</p>
    </footer>
</body>
</html>
