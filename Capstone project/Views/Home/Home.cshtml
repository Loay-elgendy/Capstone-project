@model IEnumerable<Capstone_project.Models.AddClinic>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Client Dashboard - Pro Clinic</title>
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>

    <!-- Navbar -->
    <header>
        <div class="header-left">
            <div class="logo">
                <img src="~/Images/Logoafteredit.png" alt="Pro Clinic Logo" />
                <span>Pro Clinic</span>
            </div>
            <nav>
                <a href="#doctors">Doctors</a>
                <a href="#prescription">Reservation</a>
                <a href="#info">Information</a>
            </nav>
        </div>
        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Search for..." />
        </div>
    </header>

    <!-- Doctors Section -->
    <div id="doctors" class="section-title">Doctors</div>
    <div class="doctor-container">
        @if (Model != null)
        {
            @foreach (var clinic in Model)
            {
                <div class="doctor">
                    <h3>@clinic.DoctorName</h3>
                    <p>Specialty: @clinic.Specialty</p>
                    <p>Consultation Fee: @clinic.ConsultationFee</p>
                    <p>Available Days: @string.Join(", ", clinic.AvailableDays)</p>
                    <a href="@Url.Action("select","select")">select</a>
                </div>
            }
        }
    </div>


    <!-- Reservation Table -->
    <div id="prescription" class="section-title">Reservation</div>
    <div class="card large" style="width: 90%; margin: auto;">
        <table style="width: 100%; border-collapse: collapse; text-align: center;">
            <thead style="background-color: #e7f4ff;">
                <tr>
                    <th style="padding: 10px; border: 1px solid #ccc;">Name</th>
                    <th style="padding: 10px; border: 1px solid #ccc;">Price</th>
                    <th style="padding: 10px; border: 1px solid #ccc;">Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td style="padding: 10px; border: 1px solid #ccc;">@item.DoctorName</td>
                            <td style="padding: 10px; border: 1px solid #ccc;">@item.ConsultationFee</td>
                            <td style="padding: 10px; border: 1px solid #ccc;"> @string.Join(", ", item.AvailableDays)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Information Section -->
    <section class="info" id="info">
        <h2 class="section-title">Information</h2>
        <div class="info-cards">
            <div class="info-card">
                <div class="icon"><i class="fas fa-lightbulb"></i></div>
                <strong>About the project</strong>
                <p>
                    A smart system to reduce workload in clinics and<br>
                    improve the accuracy of diagnoses and prescriptions<br>
                    using modern digital technologies.
                </p>
            </div>

            <div class="info-card">
                <div class="icon"><i class="fas fa-check"></i></div>
                <strong>Challenges</strong>
                <p>
                    Crowded clinics and long waiting times.<br>
                    Time wasted collecting information manually.<br>
                    Prescription errors due to handwriting.
                </p>
            </div>

            <div class="info-card">
                <div class="icon"><i class="fas fa-ambulance"></i></div>
                <strong>Impact of the solution</strong>
                <p>
                    On doctors: More time for diagnosis, fewer errors, higher productivity.<br>
                    On patients: Reduced waiting times, easier experience, more accurate treatment.<br>
                    On the market: Drives the digitization of medical services and increases user loyalty.
                </p>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="socials">
            <i class="fab fa-facebook-f"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-linkedin-in"></i>
        </div>
        <p>Pro clinic © 2025. All rights reserved.</p>
    </footer>
</body>
</html>
