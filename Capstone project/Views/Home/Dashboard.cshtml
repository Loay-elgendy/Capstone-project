@model Capstone_project.Models.Dash
@{
    ViewData["Title"] = "Doctor Dashboard";
    Layout = null;
}

<link rel="stylesheet" href="~/css/Doctor.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<main>
    <header class="navbar">
        <div class="logo">
            <img src="~/images/Logoafteredit.png" alt="Store Icon">
            <span>Pro clinic</span>
        </div>
        <nav class="nav-links">
            <a href="#">Reservations</a>
            <a href="#">Patients</a>
            <a href="#">Info</a>
        </nav>
        <div class="search-section">
            <input type="text" placeholder="Search for...">
        </div>
    </header>

    <section class="reservations">
        <h2>Reservations</h2>
        @if (Model != null && Model.Reservations != null && Model.Reservations.Any())
        {
            <table class="reservation-table">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Time</th>
                        <th>Day</th>
                        <th>Location</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var res in Model.Reservations)
                    {
                        <tr>
                            <td>@res.DoctorName</td>
                            <td>@res.Time</td>
                            <td>@res.Day</td>
                            <td>@res.Location</td>
                            
                            @foreach (var Patient in Model.Patients)
                            {
                                @if (res.Id == Patient.Id-1){
                                <td>
                                    <a href="@Url.Action("AddDetails", "Details", new { id = Patient.DoctorId })">
                                        Check Reservation
                                    </a>
                                </td>
                            
                                }
                            }
                            
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No reservations found.</p>
        }
    </section>


    <section class="patients">
        <h2>Patients</h2>
        <div class="patients-list">
            @if (Model != null && Model.Patients != null && Model.Patients.Any())
            {
                foreach (var patient in Model.Patients)
                {
                    <div class="doctor">
                        <h3>@patient.FirstName @patient.LastName</h3>
                        <p>Email: @patient.Email</p>
                        <p>ID: @patient.DoctorId</p>
                    </div>
                }
            }
            else
            {
                <p>No patients found.</p>
            }
        </div>
    </section>

    <section class="info">
        <h2>Information</h2>
        <div class="info-cards">
            <div class="info-card">
                <div class="icon">📌</div>
                <p>
                    <strong>About the project</strong><br />
                    A smart system to reduce workload in clinics and<br>
                    improve the accuracy of diagnoses and prescriptions<br>
                    using modern digital technologies.
                </p>
            </div>
            <div class="info-card">
                <div class="icon">⏱️</div>
                <p><strong>Challenges</strong><br />
                    Crowded clinics and long waiting times.<br>
                    Time wasted collecting information manually.<br>
                    Prescription errors due to handwriting.
                </p>
            </div>
            <div class="info-card">
                <div class="icon">🚑</div>
                <p>
                    <strong>Impact of the solution</strong><br>
                    On doctors: More time for diagnosis, fewer errors, higher productivity.<br>
                    On patients: Reduced waiting times, easier experience, more accurate treatment.<br>
                    On the market: Drives the digitization of medical services and increases user loyalty.
                </p>
            </div>
        </div>
    </section>
</main>

<footer>
    <div class="socials">
        <i class="fab fa-facebook-f"></i>
        <i class="fab fa-twitter"></i>
        <i class="fab fa-instagram"></i>
        <i class="fab fa-linkedin-in"></i>
    </div>
    <p>Pro clinic © 2025. All rights reserved.</p>
</footer>
