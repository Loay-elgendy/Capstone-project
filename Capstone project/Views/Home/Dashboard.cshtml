@model Capstone_project.Models.Dash
@{
    ViewData["Title"] = "Doctor Dashboard";
    Layout = null;
}

<link rel="stylesheet" href="~/css/Doctor.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<main>
    <header class="navbar">
        <div class="logo">
            <img src="~/images/Logoafteredit.png" alt="Store Icon">
            <span>Pro clinic</span>
        </div>
        <nav class="nav-links">
            <a href="#">Reservations</a>
            <a href="#">Patients</a>
            <a href="#">Info</a>
        </nav>
        <div class="search-section">
            <input type="text" placeholder="Search for...">
        </div>
    </header>

    <section class="reservations">
        <h2>Reservations</h2>
        @if (Model != null && Model.Reservations != null && Model.Reservations.Any())
        {
            foreach (var res in Model.Reservations)
            {
                <div class="reservation-card">
                    <div class="card-header">Patient: @res.DoctorName</div>
                    <div class="card-body">
                        <span>At @res.Time on @res.Day</span><br />
                        <span>Location: @res.Location</span>
                        <a href="@Url.Action("Status", "Status")" class="status-btn">Check the status</a>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No reservations found.</p>
        }
    </section>

    <section class="patients">
        <h2>Patients</h2>
        <div class="patients-list">
            @if (Model != null && Model.Patients != null && Model.Patients.Any())
            {
                foreach (var patient in Model.Patients)
                {
                    <div class="doctor">
                        <h3>@patient.FirstName @patient.LastName</h3>
                        <p>Email: @patient.Email</p>
                        <p>ID: @patient.DoctorId</p>
                        <a href="@Url.Action("AddDetails", "Details", new { id = patient.DoctorId })">Details</a>
                    </div>
                }
            }
            else
            {
                <p>No patients found.</p>
            }
        </div>
    </section>

    <section class="info">
        <h2>Information</h2>
        <div class="info-cards">
            <div class="info-card">
                <div class="icon">📌</div>
                <p><strong>About the project</strong><br />تحسين الدقة وتقليل الوقت باستخدام التكنولوجيا.</p>
            </div>
            <div class="info-card">
                <div class="icon">⏱️</div>
                <p><strong>Challenges</strong><br />الانتظار الطويل، جمع المعلومات اليدوي، أخطاء الكتابة.</p>
            </div>
            <div class="info-card">
                <div class="icon">🚑</div>
                <p><strong>Impact of the solution</strong><br />تقليل الأخطاء وتحسين الكفاءة للأطباء والمرضى.</p>
            </div>
        </div>
    </section>
</main>

<footer>
    <div class="socials">
        <i class="fab fa-facebook-f"></i>
        <i class="fab fa-twitter"></i>
        <i class="fab fa-instagram"></i>
        <i class="fab fa-linkedin-in"></i>
    </div>
    <p>Pro clinic © 2025. All rights reserved.</p>
</footer>
